{
    "name": "Eva Extension",
    "version": "0.0.3",
    "description": "Build an Extension!",
    "permissions": ["storage", "activeTab", "scripting"],
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/images/main.png",
        "32": "/images/main.png",
        "48": "/images/main.png",
        "128": "/images/main.png"
      }
    },
    "icons": {
      "16": "/images/main.png",
      "32": "/images/main.png",
      "48": "/images/main.png",
      "128": "/images/main.png"
    },
    "options_page": "options.html"
  }